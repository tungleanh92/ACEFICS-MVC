block append header
    header#header
        .header-top
            .bs-container
                .top-content.clearfix
                    .header-social
                        p.hotline HOTLINE: 1900 1934
                    .header-conect
                        span.show__top(title='menu top')
                            i.far.fa-caret-square-down
                        .social-item.item-language
                            p.title
                                img(src='/images/header/flag.png', alt='')
                            ul.social-list
                                li.social-list__item
                                    a.social-item__link.activeMenu(href='#')
                                        img(src='/images/header/flag.png', alt='')
                                //- li.social-list__item
                                //-     a.social-item__link(href='#')
                                //-         img(src='/images/header/flag.png', alt='')
                        //- .search
                        //-     input#seach(type='text', name='search', placeholder='Search ..')
        .header-nav
            .bs-container
                .nav-content.clearfix
                    .logo
                        a(href='#')
                            img(src='/images/header/logo.png', alt='')
                    .nav
                        span.show__menu
                            i.fas.fa-bars
                        .menu
                            span.close__menu
                                i.far.fa-window-close
                            ul.menu-list.clearfix
                                li.menu-list__item
                                    a.menu-list__link.active(href='/') TRANG CHỦ
                                li.menu-list__item
                                    a.menu-list__link(href='contacts') LIÊN HỆ