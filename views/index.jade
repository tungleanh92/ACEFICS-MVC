                              img(src='/images/homepage/field-img/tower1.gif', alt='')
                            span.tower2
                              img(src='/images/homepage/field-img/tower2.gif', alt='')
                            span.tower3
                              img(src='/images/homepage/field-img/tower3.gif', alt='')
                            span.layer6
                              img(src='/images/homepage/field-img/layer6.gif', alt='')
                            span.home
                              img(src='/images/homepage/field-img/home.gif', alt='')
                            span.tree1
                              img(src='/images/homepage/field-img/tree.gif', alt='')
                            span.tree2
                              img(src='/images/homepage/field-img/tree.gif', alt='')
