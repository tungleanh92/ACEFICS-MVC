extends ./layout

block append content
  .filter
    include ./modules/header.jade
    main#main
      section.section-banner
        .bs-container
          .bs-row
            .bs-col
              .module.module-banner
                .module-header
                  h2.title=sectionBanner.title
                  p=sectionBanner.desc
                  //- button XEM THEM
