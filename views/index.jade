                              img(src='/images/homepage/field-img/tree.gif', alt='')
                          .round
                            img.outer-round(src='/images/homepage/field-img/main_round.gif', alt='')
                            .rotate
                              span.blueprint.item1.bp-hover.crtl-rotate
                                img(src='/images/homepage/field-img/layer4.gif', alt='')
                              span.fix.item2.fx-hover.crtl-rotate
                                img(src='/images/homepage/field-img/layer1.gif', alt='')
                              span.construc.item3.ct-hover.crtl-rotate
                                img(src='/images/homepage/field-img/layer3.gif', alt='')
                              span.setting.item4.st-hover.crtl-rotate
                                img(src='/images/homepage/field-img/layer2.gif', alt='')
                            .transform
                              .rotateLine
                                span.blueprint
                                  img(src='/images/homepage/field-img/line4.gif', alt='')
                                span.fix
                                  img(src='/images/homepage/field-img/line1.gif', alt='')
                                span.construc
                                  img(src='/images/homepage/field-img/line3.gif', alt='')
                                span.setting
                                  img(src='/images/homepage/field-img/line2.gif', alt='')
      section.section-project
        .bs-container
          .bs-row
            .bs-col
              .module.module-project
                .module-content
                  .bs-tab
                    .tab-container
                      .tab-control(data-aos='zoom-out-right')
                        h2=sectionProject.title
                        ul.control-list
                          - let count=0;
                          while count<projects.length
                            li.control-list__item(tab-show='#tab'+parseInt(count+1))=projects[count][0].type
                            - count++;
                      .tab-content(data-aos='zoom-out-left')
                        - count=0;
                          while count<projects.length
                            div(id="tab"+parseInt(count+1)).tab-item
                              .grpBtn
                                  span(class="prev"+parseInt(count+1)).prev
                                    img(src='/images/homepage/arrow.png', alt='')
                                  span(class="next"+parseInt(count+1)).next
                                    img(src='/images/homepage/arrow.png', alt='')
                              div(class="sliderImg"+parseInt(count+1))
                                - let count2 = 0
                                  while count2<projects[count].length
                                    .wrapper
                                      .img
                                        img(src=projects[count][count2].image, alt='')
                                      .desc
                                        p.building=projects[count][count2].title
                                        p.business=projects[count][count2].desc
                                    - count2 ++;
                            - count++;
                  span.effectTitle PROJECTS
