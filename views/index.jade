          .bs-container
            .bs-row
              .bs-col
                .module.module-about
                  .module-content
                    .bs-row.row-md-15
                      .bs-col.md-50-15
                        .img(data-aos='flip-left')
                          img(src='/images/homepage/about-img.png')
                      .bs-col.md-50-15
                        .header(data-aos='flip-right')
